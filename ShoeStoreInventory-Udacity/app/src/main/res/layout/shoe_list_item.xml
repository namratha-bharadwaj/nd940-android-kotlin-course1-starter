<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        app:contentPadding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shoe_name_label_tv"
                    android:layout_width="141dp"
                    android:layout_height="match_parent"
                    android:text="shoe name: " />

                <TextView
                    android:id="@+id/shoe_name_tv"
                    android:layout_width="214dp"
                    android:layout_height="match_parent"
                    android:hint="shoe name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shoe_company_label_tv"
                    android:layout_width="141dp"
                    android:layout_height="match_parent"
                    android:text="shoe company: " />

                <TextView
                    android:id="@+id/shoe_company_tv"
                    android:layout_width="214dp"
                    android:layout_height="match_parent"
                    android:hint="shoe company" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shoe_size_label_tv"
                    android:layout_width="141dp"
                    android:layout_height="match_parent"
                    android:text="shoe size: " />

                <TextView
                    android:id="@+id/shoe_size_tv"
                    android:layout_width="214dp"
                    android:layout_height="match_parent"
                    android:hint="shoe size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shoe_description_label_tv"
                    android:layout_width="141dp"
                    android:layout_height="match_parent"
                    android:text="Description: " />

                <TextView
                    android:id="@+id/shoe_description_tv"
                    android:layout_width="214dp"
                    android:layout_height="match_parent"
                    android:hint="Description" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>